@{
    ViewData["Title"] = "Measurement";
}


@model MeasurementListViewModel

<h3 class="display-4">Measurements</h3>
<input type="text" /> <input type="button" value="Search"></button>
<br>

<div class="row marginTop">
    <table class="table">
        <thead>
            <tr>
                <th>Serial Number</th>
                <th>Air Humidity</th>
                <th>Carbon Monoxide Level</th>
                <th>Health Status</th>
                <th>Measumerent DateTime</th>
                <th>Temperature</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var measurement in Model.Measurements)
            {
            <tr>
                <td>
                    &nbsp;
                    @*Placeholder for Serial Number*@
                </td>
                <td>
                    @measurement.AirHumidity.ToString()
                </td>
                <td>
                    @measurement.CarbonMonoxideLevel.ToString()
                </td>
                <td>
                    @measurement.HealthStatus.ToString()
                </td>
                <td>
                    @measurement.MeasumerentDateTime.ToString()
                </td>
                <td>
                    @measurement.Temperature.ToString()
                </td>
            </tr>
            }
        </tbody>
        <table>

</div>
