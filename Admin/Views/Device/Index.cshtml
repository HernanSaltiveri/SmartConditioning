@{
    ViewData["Title"] = "Devices";
}

@model DeviceListViewModel

<h3 class="display-4">Devices</h3>
<input type="text" id="searchtextbox" />
<a href="@Url.Action("Search", "Sensor" , new { id = 1 })">Sensors</a>
<br>


<div class="row marginTop">
    <table class="table">
        <thead>
            <tr>
                @*<th>Device Id</th>*@
                <th>Serial Number</th>
                <th>FirmWare Version</th>
                <th>Registration Date</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Model.Devices)
            {
                <tr>
                    @*<td>
                            @device.DeviceId.ToString()
                        </td>*@
                    <td>
                        @device.serialNumber.ToString()
                    </td>
                    <td>
                        @device.firmWareVersion.ToString()
                    </td>
                    <td>
                        @device.registrationDate.ToString()
                    </td>
                    <td>
                        <a href="@Url.Action("Search", "Sensor" , new { id = device.DeviceId })">Sensors</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
