@{
    ViewData["Title"] = "Devices";
}

@model DeviceListViewModel

<h3 class="display-4">Devices</h3>
@*<input type="text" />
@Html.ActionLink("Search", "Search", new { id =12345 },  new { @class = "btn btn-light", @style = "color:black" })
<br>*@

<script>
    $(document).ready(function () {
        $('#data').DataTable();
    });
</script>

<div class="row marginTop">
    <table id="data" class="table table-striped table-bordered" style="width:100%">

        <thead>
            <tr>
                @*<th>Device Id</th>*@
                <th>Serial Number</th>
                <th>FirmWare Version</th>
                <th>Registration Date</th>
                <th>&nbsp;</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var device in Model.Devices)
            {
                <tr>
                    @*<td>
                            @device.DeviceId.ToString()
                        </td>*@
                    <td>
                        @device.serialNumber.ToString()
                    </td>
                    <td>
                        @device.firmWareVersion.ToString()
                    </td>
                    <td>
                        @device.registrationDate.ToString()
                    </td>

                    <td>
                        <a href="@Url.Action("SearchByDevice", "Sensor" , new { id = device.serialNumber })">Sensors</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
